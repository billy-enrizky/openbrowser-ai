# OpenBrowser Backend Environment Variables

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS settings (JSON array)
CORS_ORIGINS=["http://localhost:3000","https://openbrowser.me","https://www.openbrowser.me"]

# Agent settings
DEFAULT_MAX_STEPS=50
DEFAULT_AGENT_TYPE=code
DEFAULT_LLM_MODEL=gemini-3-flash-preview
MAX_CONCURRENT_AGENTS=10

# Redis (optional, for session persistence)
# REDIS_URL=redis://localhost:6379

# PostgreSQL (required for chat persistence)
# POSTGRES_PASSWORD=your_postgres_password
# DATABASE_URL=postgresql+asyncpg://postgres:${POSTGRES_PASSWORD}@localhost:5432/openbrowser
# DATABASE_ECHO=false

# LLM API Keys (set these for the agents to work)
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_API_KEY=your_google_key
# GEMINI_API_KEY=your_gemini_key  # Alternative to GOOGLE_API_KEY

# Cognito Authentication (optional)
# Set AUTH_ENABLED=true to require JWT auth for REST + WebSocket.
AUTH_ENABLED=false
# COGNITO_REGION=ca-central-1
# COGNITO_USER_POOL_ID=ca-central-1_xxxxxxxx
# COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
# Optional explicit issuer override:
# COGNITO_ISSUER=https://cognito-idp.ca-central-1.amazonaws.com/ca-central-1_xxxxxxxx
